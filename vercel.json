{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "buildCommand": "cd client && npm run build",
  "devCommand": "cd client && npm run dev",
  "installCommand": "cd client && npm install",
  "outputDirectory": "client/build"
} 